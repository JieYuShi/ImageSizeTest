<LinearLayout
    android:id="@+id/alc_card_manager_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/alc_card_manager_item_drag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/alc_base_icon_sort"/>


    <ImageView
        android:id="@+id/alc_card_manager_item_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/alc_city_manager_add"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/alc_card_manager_item_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@drawable/alc_city_manager_add"/>

    <TextView
        android:id="@+id/alc_card_manager_item_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLength="15"
        android:singleLine="true"
        android:text="时辰吉凶"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/alc_card_manager_item_delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:src="@drawable/alc_city_manager_del"/>
</LinearLayout>